<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl_white"
    tools:context=".activities.MainActivity">

    <!-- Status Bar Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/pearl_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerSection" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_username"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/midnight_black"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.005" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_explore_the_world_together"
            android:textSize="16sp"
            android:textColor="@color/stone_gray"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.015" />

    </LinearLayout>

    <!-- Main Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Empty State Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/emptyStateCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/snow_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/whisper_gray"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp">

                <!-- Travel Icon Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:cardBackgroundColor="@color/sky_blue_light"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="32dp">


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_for_your_next_adventure"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/midnight_black"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_your_first_travel_plan_and_discover_namazing_destinations_around_the_world"
                    android:textSize="15sp"
                    android:textColor="@color/stone_gray"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_marginBottom="40dp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginHorizontal="8dp" />

                <!-- CTA Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/createPlanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/ocean_blue"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="18dp"
                        android:paddingHorizontal="32dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_plus"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/snow_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/create_my_first_plan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/snow_white"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>