<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topWave"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/subtle_wave"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_picture"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        android:textColor="#1E88E5"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05" />

    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Craft your perfect trip."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameText"
        android:textColor="#78909C"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05" />

    <!-- Beautiful container for buttons -->
    <androidx.cardview.widget.CardView
        android:id="@+id/buttonsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sloganText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Generate New Plan button with gradient -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/generateNewPlanButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Generate New Plan"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp"
                android:backgroundTint="#2196F3"
                app:rippleColor="#BBDEFB"
                app:icon="@drawable/ic_magic_wand"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.025" />

            <!-- Subtle divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <!-- Saved Plans button with outline style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/savedPlansButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Saved Plans"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#1E88E5"
                app:strokeColor="#1E88E5"
                app:strokeWidth="1.5dp"
                app:rippleColor="#BBDEFB"
                app:icon="@drawable/ic_bookmark"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="12dp"
                app:iconTint="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.025" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subtle bottom decoration -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/bottom_waves"
        android:scaleType="fitXY"
        android:alpha="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Decorative waves"/>

</androidx.constraintlayout.widget.ConstraintLayout>